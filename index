  <!-- Firebase -->
  <script src="https://www.gstatic.com/firebasejs/10.12.5/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.12.5/firebase-database.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.12.5/firebase-storage.js"></script>

  <script>
    // Configuración Firebase
    const firebaseConfig = {
      apiKey: "AIzaSyAhzxDhO1ix8DyutaJDbtkz1P_mUyIB5Vc",
      authDomain: "picks026-e81f6.firebaseapp.com",
      databaseURL: "https://picks026-e81f6-default-rtdb.firebaseio.com",
      projectId: "picks026-e81f6",
      storageBucket: "picks026-e81f6.appspot.com",
      messagingSenderId: "97384480235",
      appId: "1:97384480235:web:e404ab706a40b9084d2dae",
      measurementId: "G-D2LNRY5WSC"
    };

    const app = firebase.initializeApp(firebaseConfig);
    const db = firebase.database();
    const storage = firebase.storage();

    // Referencias
    const refs = {
      rVisitor: document.getElementById("rVisitor"),
      hVisitor: document.getElementById("hVisitor"),
      eVisitor: document.getElementById("eVisitor"),
      rHome: document.getElementById("rHome"),
      hHome: document.getElementById("hHome"),
      eHome: document.getElementById("eHome"),
      inning: document.getElementById("inning"),
      outs: document.getElementById("outs"),
      logoVisitor: document.getElementById("logoVisitor"),
      logoHome: document.getElementById("logoHome"),
      tiktokLogo: document.getElementById("tiktokLogo"),
    };

    // Guardar stats en DB en tiempo real
    Object.keys(refs).forEach(key => {
      if (refs[key].tagName === "INPUT" && refs[key].type === "number") {
        refs[key].addEventListener("input", () => {
          db.ref("scoreboard/" + key).set(refs[key].value);
        });
      }
    });

    // Escuchar cambios de DB
    db.ref("scoreboard").on("value", snapshot => {
      const data = snapshot.val();
      if (!data) return;
      Object.keys(data).forEach(key => {
        if (refs[key] && refs[key].type === "number") {
          refs[key].value = data[key];
        }
      });
    });

    // Subir imágenes a Firebase Storage
    function uploadLogo(fileInput, path, imgElement) {
      const file = fileInput.files[0];
      if (!file) return;
      const storageRef = storage.ref("logos/" + path);
      storageRef.put(file).then(() => {
        storageRef.getDownloadURL().then(url => {
          db.ref("logos/" + path).set(url);
        });
      });
    }

    document.getElementById("uploadVisitor").addEventListener("change", (e) => uploadLogo(e.target, "visitor", refs.logoVisitor));
    document.getElementById("uploadHome").addEventListener("change", (e) => uploadLogo(e.target, "home", refs.logoHome));
    document.getElementById("uploadTiktok").addEventListener("change", (e) => uploadLogo(e.target, "tiktok", refs.tiktokLogo));

    // Escuchar cambios en logos desde DB
    db.ref("logos").on("value", snapshot => {
      const logos = snapshot.val();
      if (!logos) return;
      if (logos.visitor) refs.logoVisitor.src = logos.visitor;
      if (logos.home) refs.logoHome.src = logos.home;
      if (logos.tiktok) refs.tiktokLogo.src = logos.tiktok;
    });
  </script>
